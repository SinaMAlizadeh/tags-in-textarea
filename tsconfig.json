{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
